{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "name": "blogs"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "body": {
      "type": "richtext"
    },
    "poster_id": {
      "type": "integer"
    },
    "title": {
      "type": "string"
    },
    "post_cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
